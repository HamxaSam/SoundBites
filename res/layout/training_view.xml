<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btnTrainingBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Back"
        android:textSize="25px" />

    <TextView
        android:id="@+id/textTrainingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20px"
        android:text="Enter the name of the context you would like to add to the knowledgebase."
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/edittextTrainingContextname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textTrainingTitle"
        android:layout_margin="20px"
        android:text="Example: Library" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textTrainingRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edittextTrainingContextname"
        android:layout_margin="20px"
        android:text="Press &apos;record&apos; to add this context!"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/btnTrainingRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTrainingRecord"
        android:layout_centerHorizontal="true"
        android:layout_margin="20px"
        android:text="Record now"
        android:textSize="25px" />

    <ProgressBar
        android:id="@+id/pbTimer"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnTrainingRecord"
        android:layout_centerHorizontal="true" android:visibility="invisible"/>

    <Button
        android:id="@+id/btnRecordFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pbTimer"
        android:layout_centerHorizontal="true"
        android:layout_margin="20px"
        android:text="Just record a file"
        android:textSize="15px" />

</RelativeLayout>